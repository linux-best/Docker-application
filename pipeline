pipeline {
    agent any

    environment {
        PATH_DOCKERFILE = '/home/javande/Docker-application/python-application-1/'
        VAR_DOCKER = 'linuxbest531/python-application'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/linux-best/Docker-application/'
            }
        }
        stage('Build') {
            steps {
                sh """"
                cd python-application-1/
                sudo docker build  -f Dockerfile -t linux531/python-application "${env.PATH_DOCKERFILE}"
                """
            }
        }
        stage('Test') {
            steps {
                sh 'docker run --rm "${env.VAR_DOCKER}:${env.BUILD_NUMBER}"'
            }
        }
        stage('Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}
